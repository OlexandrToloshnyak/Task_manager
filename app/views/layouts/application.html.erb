<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/70bd3b211b.js" crossorigin="anonymous"></script>
    <%= favicon_link_tag asset_path('favicon.png') %>
  </head>

  <body>
  <div class="container">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <% if user_signed_in? %>
  <h5 class="my-0 mr-md-auto font-weight-bold"><a class="nav-link active" href="<%= projects_path %>">To-Do</a></h5>
      <nav class="my-2 my-md-0 mr-md-3">
      <span class="p-2 text-dark"><%= link_to "Main Page",
      projects_path %>  </span>
      <span class="p-2 text-dark"><%= link_to "New Project",
      new_project_path %>  </span>
      <span class="p-2 text-dark"><%= link_to "Profile",
      edit_user_registration_path,class: "btn btn-outline-primary"%>  </span>
      <span class="p-2 text-dark"><%= link_to "Log out",
      destroy_user_session_path, method: :delete,class: "btn btn-outline-primary"%>  </span>
  <% else %>
  <h5 class="my-0 mr-md-auto font-weight-bold"><a class="nav-link active" href="<%= projects_path %>">To-Do</a></h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <span class="p-2 text-dark"><%= link_to "Main Page",
    projects_path %>  </span>
    <span class="p-2 text-dark"><%= link_to "New Project",
    new_project_path %>  </span>
    <span class="p-2 text-dark"><%= link_to "Log In",
    new_user_session_path, class: "btn btn-outline-primary" %>  </span>
    <span class="p-2 text-dark"><%= link_to "Sign up",
     new_user_registration_path, class: "btn btn-outline-primary" %>  </span>
  <% end %>
  </nav>
</div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" ></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js" ></script>
  <div class="container-main">
  <% if flash.any? %>
    <%# <div class="card"> %>
    <% flash.each do |name, message| %>
      <div class="alert <%= bootstrap_class_for(name) %> alert-dismissible" role="alert" style="background-color: rgba(250, 250, 250);
		border: 1px solid gray;">
        <button class="close" data-dismiss="alert">&times;</button>
        <%= message %>
      </div>  
    <% end  %>
    <%# </div> %>
  <% end %>
  
    <%= yield %>
  </div>
  </body>
</html>
