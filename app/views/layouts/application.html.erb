<!DOCTYPE html>
<html>
  <head>
    <title>TaskManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/70bd3b211b.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <div class="container">
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
  <h5 class="my-0 mr-md-auto font-weight-bold"><a class="nav-link active" href="<%= projects_path %>">To-Do</a></h5>
  <nav class="my-2 my-md-0 mr-md-3">
    <span class="p-2 text-dark"><%= link_to "Main Page",
    projects_path %>  </span>
    <span class="p-2 text-dark"><%= link_to "New Project",
    new_project_path %>  </span>
  </nav>
  <%# <a class="btn btn-outline-primary" href="#">Sign up</a> %>
</div>
</div>
  <div class="container-main">
    <%= yield %>
  </div>
  </body>
</html>
