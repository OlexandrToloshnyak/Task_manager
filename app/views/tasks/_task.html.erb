<div >
    <% if task.completed? %>
        <div class="complete">
            <%= link_to "Mark as Compete",  complete_project_task_path(@project, task.id), method: :patch %>
        </div>
        <div class="todo_item">
            <p style="opacity: 0.4;"><strike><%= task.name %></strike></p>
        </div>
        <div class="trash">
            <%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you shure?"} %>
        </div>
    <% else %>
        <div class="complete">
                <%= link_to "Mark as Compete",  complete_project_task_path(@project, task.id), method: :patch %>
            </div>
            <div class="todo_item">
                <p><%= task.name %></p>
            </div>
            <div class="trash">
                <%= link_to "Delete", project_task_path(@project, task.id), method: :delete, data: { confirm: "Are you shure?"} %>
            </div>
        <% end%>
</div>
